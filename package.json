{
  "name": "polymarket-copy-trading",
  "version": "1.0.0",
  "description": "Production-ready Copy Trading Platform for Polymarket",
  "scripts": {
    "dev": "bun --bun run next dev",
    "build": "bun run next build",
    "start": "bun run next start",
    "lint": "next lint",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:e2e": "playwright test",
    "type-check": "tsc --noEmit",
    "db:migrate": "npx tsx scripts/migrate.ts",
    "db:seed": "npx tsx scripts/seed.ts",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:test": "npx tsx scripts/test-simple.ts",
    "test:integration": "npx tsx scripts/test-integration.ts",
    "test:polymarket": "npx tsx scripts/test-polymarket-api.ts",
    "fetch:markets": "npx tsx scripts/fetch-real-markets.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "local:setup": "npm run docker:up && sleep 5 && npm run db:push && npm run db:seed",
    "local:dev": "npm run docker:up && sleep 3 && bun run dev",
    "local:test": "npm run docker:up && sleep 3 && npm run db:push && bun test && bun run test:e2e",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@tanstack/react-query": "^5.14.2",
    "@vercel/postgres": "^0.5.1",
    "axios": "^1.6.2",
    "bullmq": "^5.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "ethers": "^6.9.0",
    "ioredis": "^5.3.2",
    "lucide-react": "^0.303.0",
    "next": "^14.0.4",
    "next-auth": "^4.24.5",
    "prisma": "^5.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.10.3",
    "siwe": "^3.0.0",
    "tailwind-merge": "^2.2.0",
    "viem": "^2.0.0",
    "wagmi": "^2.2.0",
    "ws": "^8.18.3",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
